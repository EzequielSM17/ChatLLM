<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ViewModels"
             x:DataType="viewmodel:ChatViewModel"
             x:Class="Views.SettingsPage" 
             Title="Configuración">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Configuración del Modelo" FontSize="20" FontAttributes="Bold" />

            <VerticalStackLayout Spacing="15" Padding="20">

                <Label Text="Seleccionar Modelo" 
           FontSize="16" 
           FontAttributes="Bold" />

                <Picker Title="Selecciona un modelo"
            ItemsSource="{Binding AvailableModels, Mode=TwoWay}"
            SelectedItem="{Binding modelName, Mode=TwoWay}"
            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />

                <Label Text="{Binding modelName, StringFormat='Modelo activo: {0}'}" 
           FontSize="Caption" 
           TextColor="Gray" />

            </VerticalStackLayout>

            <Label Text="System Prompt" />
            <Editor Text="{Binding systemPrompt, Mode=TwoWay}" AutoSize="TextChanges" HeightRequest="100" />

            <Label Text="{Binding Temperature, Mode=TwoWay, StringFormat='Temperatura: {0:F1}'}" />
            <Slider Minimum="0" Maximum="1.5" Value="{Binding Temperature, Mode=TwoWay}" />

            <Label Text="{Binding topK, Mode=TwoWay, StringFormat='Top K: {0}'}" />
            <Stepper Minimum="1" Maximum="100" Value="{Binding topK, Mode=TwoWay}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>